<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <TableLayout
        android:id="@+id/tbl_other_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/very_light_blue_two">
            <TableLayout
                android:id="@+id/tbl_last_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="20sp"
                android:layout_marginBottom="10dp"
                android:background="@color/background_material_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/last_notes"
                    android:text="@string/last_notes"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/abc_search_url_text_selected"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
                </TextView>
                <TextView
                    android:id="@+id/last_notes_date_of_update"
                    android:layout_marginStart="10dp"
                    android:text="@string/afewtimeago"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/browser_actions_title_color"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
                </TextView>
                <HorizontalScrollView
                    android:id="@+id/scrollViewHorizontalLastNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tableRowOfMraks">

                    </TableRow>
                </HorizontalScrollView>
            </TableLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollViewHome">
            <TableLayout
                android:id="@+id/tblInScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:id="@+id/diaryTV"
                    android:text="@string/diary"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textSize="24sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="5dp">
                </TextView>
                <TableLayout
                    android:elevation="5dp"
                    android:id="@+id/tblDiary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/less_rounded_corners">
                    <TextView
                        android:id="@+id/nowTV"
                        android:text="@string/now"
                        android:textColor="@color/avatar_color_blue"
                        android:textSize="22sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/currentTV"
                        android:textSize="26sp"
                        android:text="Уроков не найдено"
                        android:textColor="@color/abc_search_url_text_pressed"
                        android:layout_marginStart="10sp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/afterTV"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp"
                        android:text="Следующий непойми когда"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="10sp"
                        >
                    </TextView>
                </TableLayout>
                <TextView
                    android:id="@+id/HomeWorkTV"
                    android:text="Отдыхайте, домашки нет"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textSize="24sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="5dp">
                </TextView>
                <TableLayout
                    android:elevation="5dp"
                    android:id="@+id/tblHomeWork"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/less_rounded_corners">
                </TableLayout>
            </TableLayout>
        </ScrollView>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
